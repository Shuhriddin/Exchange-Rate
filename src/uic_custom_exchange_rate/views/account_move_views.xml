<odoo>
    <record id="view_move_form_manual_rate" model="ir.ui.view">
        <field name="name">account.move.form.manual.rate</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group string="Manual Exchange Rate">
                    <field name="apply_manual_exchange"/>
                    <field name="manual_rate" attrs="{'invisible':[('apply_manual_exchange','=',False)]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
