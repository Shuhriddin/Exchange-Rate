<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="view_hr_expense_sheet_form_exchange_rate_field_add_inherit" model="ir.ui.view">
            <field name="name">view.hr.expense.form.exchange.rate.field.add.inherit</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
            	<field name="accounting_date" position="after">
            		<field name="currency_id" readonly="0"/>
            		<field name="expense_manual_currency_rate_active" />
            		<field name="expense_manual_currency_rate"
                           invisible="not expense_manual_currency_rate_active"
                           required="expense_manual_currency_rate_active" />
            	</field>
            </field>
        </record>
  </data>
</odoo>